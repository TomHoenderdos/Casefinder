<%= form_for @size, :html => {:class => "form-horizontal"} do |f| %>
    <% if @size.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@size.errors.count, "error") %> prohibited this size from being saved:</h2>

            <ul>
                <% @size.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col-md-12">
            <table style="background:transparent;" class="table table-condensed table-responsive table-striped">
                <tbody>
                    <tr>
                        <td width="10" style="white-space:nowrap;"><strong><label class="control-label" for="size_brand">Size</label></strong></td>
                        <td width="100%"><%= f.text_field :size, :class => "form-control" %></td>
                    </tr>
                    <tr>
                        <td width="10" style="white-space:nowrap;"><strong><%= f.label :row_order, :class => "control-label" %></strong></td>
                        <td width="100%"><%= f.text_field :row_order, :class => "form-control" %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <%= f.submit class: "btn btn-success btn-xs", :style => "color: #fff !important; width: 110px;" %>
            <%= link_to 'Back', sizes_path, :style => "color: white; width: 110px;" , :class => "btn btn-info btn-xs" %>
        </div>
    </div>
<% end %>
