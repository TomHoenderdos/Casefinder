<h1>New case</h1>

<%= form_for @case, :html => {:class => "form-horizontal"} do |f| %>
  <% if @case.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@case.errors.count, "error") %> prohibited this case from being saved:</h2>

      <ul>
      <% @case.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :name, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :description, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :color, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :color, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :product_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :product_type, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :material, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :material, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :finishing, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :finishing, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.file_field :picture, :class => "form-control" %></div>
  </div>

  <div class="form-group">
  <%= f.label :devices, :class => "col-sm-2 control-label" %>
  <% devices_list = Device.all.map { |d| [d.full_name, d.id] } %>
  <div class="col-sm-10"><%= f.select :devices, options_for_select(devices_list),{},{ :class => "form-control", :multiple => true} %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit class: "btn btn-default btn-lg" %></div>
  </div>
<% end %>


<%= link_to 'Back', cases_path,:style => "color: white;" , :class => "btn btn-primary btn-lg" %>
