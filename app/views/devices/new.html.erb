    <%= f.label :brand, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :brand, :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit class: "btn btn-default btn-lg" %></div>
  </div>
<% end %>


