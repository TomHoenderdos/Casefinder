<div class="container valenta">
  <div class="row">
    <div class="col-md-12">
      <h1 style="color: #fff">
        Devices <%= link_to 'New Device', new_device_path, :style => "color: white;" , :class => "btn btn-success" %>
        <%= link_to 'Manage Cases', cases_path, :style => "color: #000 !important;" , :class => "btn btn-default" %> 
        <%= link_to 'Manage Finishings', finishings_path, :style => "color: #000 !important;" , :class => "btn btn-default" %> 
        <%= link_to 'Manage Sizes', sizes_path, :style => "color: #000 !important;" , :class => "btn btn-default" %>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table style="background:transparent;" class="table table-condensed table-responsive table-hover table-striped">
        <thead>
          <tr>
            <th style="white-space:nowrap; color: #fff;">Manufacturer</th>
            <th style="white-space:nowrap; color: #fff;">Model</th>
            <th style="white-space:nowrap; color: #fff;">Applies to</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @devices.each do |device| %>
            <tr>
              <td style="white-space:nowrap;">
                <p style="white-space:nowrap; width:130px; overflow:hidden; text-overflow: ellipsis;" class="p-no-margin">
                  <%= device.brand %>
                </p>
              </td>
              <td style="white-space:nowrap;">
                <p style="white-space:nowrap; width:130px; overflow:hidden; text-overflow: ellipsis;" class="p-no-margin">
                  <%= device.full_name %>
                </p>
              </td>
              <td style="white-space:nowrap;">
                <p style="white-space:nowrap; width:490px; overflow:hidden; text-overflow: ellipsis;" class="p-no-margin">
                  <%= device.cases.to_a.map{ |x| x.name + " " + x.color + ": " + x.product_type }.join(', ') %></td>
                </p>
              </td>
              <td><%= link_to 'View', device, :class => "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_device_path(device), :class => "btn btn-warning btn-xs" %></td>
              <td><%= link_to 'Delete', device, method: :delete, :class => "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
