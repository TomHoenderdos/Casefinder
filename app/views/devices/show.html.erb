<div class="container valenta">
	<div class="row">
		<div class="col-md-12">
			<h1 style="color: #fff">View <%= @device.brand %> <%= @device.full_name %></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<table style="background:transparent;" class="table table-condensed table-responsive table-striped">
				<tbody>
					<tr>
						<td width="10" style="white-space:nowrap;"><strong>Manufacturer</strong></td>
						<td width="10">:</td>
						<td><%= @device.brand %></td>
					</tr>
					<tr>
						<td width="10" style="white-space:nowrap;"><strong>Model</strong></td>
						<td width="10">:</td>
						<td><%= @device.full_name %></td>
					</tr>
					<tr>
						<td width="10" style="white-space:nowrap;"><strong>Compatibility</strong></td>
						<td width="10">:</td>					
						<td><%= @device.cases.to_a.map{ |x| x.name + " " + x.color + ": " + x.product_type }.join(', ') %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= link_to 'Edit', edit_device_path(@device), :style => "color: white; width: 100px;" , :class => "btn btn-warning btn-xs"  %>
			<%= link_to 'Back', devices_path, :style => "color: white; width: 100px;" , :class => "btn btn-info btn-xs"  %>
		</div>
	</div>
</div>