<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Reset password?</h2>

  <div><%= f.email_field :email, :autofocus => true, :class => "form-control killnorad", :placeholder => :Email %><br/>

  <%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-success btn-block" %></div>
<% end %>
