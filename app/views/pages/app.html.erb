          <label class="radio-inline">
            <input ng-model="case.material" type="radio" name="radioGroup_material" id="radio1" value="Tm9uLUxlYXRoZXI="> Non-Leather
          </label>
       </div>
        <div class="col-md-6">
          <h5 class="cat" style="float: left">Finishing</h5>
          <h5 class="cat reset" ng-click="clearFinishing()" onClick="$('input:radio[name=radioGroup_finishing]').prop('checked',false);">Reset</h5>
          <label class="checkbox-inline">
            <input ng-model="case.finishing.Croco" value="Croco" type="checkbox" name="radioGroup_finishing"> Croco Structure
          </label>
          <label class="checkbox-inline">
            <input ng-model="case.finishing.Print" value="Print" type="checkbox" name="radioGroup_finishing"> Print
          </label><br/>
          <label class="checkbox-inline">
            <input ng-model="case.finishing.Snake" value="Snake" type="checkbox" name="radioGroup_finishing"> Snake Structure
          </label>
          <label class="checkbox-inline">
           <input ng-model="case.finishing.Other" value="Other" type="checkbox" name="radioGroup_finishing"> Other
          </label><br/>
          <label class="checkbox-inline">
          <input ng-model="case.finishing.Gloss" value="Gloss" type="checkbox" name="radioGroup_finishing"> Gloss
          </label>
        </div>
      </div>



      <div class="row">
        <div class="col-md-3">
          <h5 class="cat" style="float: left">Colors</h5>
          <h5 class="cat reset" ng-click="clearColors()" onClick="$('input[name=colorGroup]').attr('checked',false);">Reset</h5>
          <p class="colors">
          <label class="radio-inline">
            <input ng-model="colorFilter" type="radio" name="colorGroup" id="radio2" value="Black" class="radio-pos"> 
          </label>
          <label class="radio-inline">
            <input ng-model="colorFilter" type="radio" name="colorGroup" id="radio2" value="Grey" class="radio-pos"> 
          </label>
          <label class="radio-inline">
            <input ng-model="colorFilter" type="radio" name="colorGroup" id="radio2" value="Beige" class="radio-pos"> 
          </label>
          </p>
        </div>
        <div class="col-md-9">
