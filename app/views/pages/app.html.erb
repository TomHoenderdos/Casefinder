    <div class="fmc">
      <div class="container valenta">
      <div class="row">
        <div class="col-md-3">
          <h5 class="cat">Device</h2>
          <!-- Single button -->
<select ng-model="devices" class="form-control">
<option value="" >--- Empty ---</option>
<option ng-repeat="device in allDevices" value="{{device.id}}">{{device.brand}} {{device.full_name}}</option>
</select>
   
        </div>
        <div class="col-md-3 filter">
