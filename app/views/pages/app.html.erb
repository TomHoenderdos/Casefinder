          <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
       </div>
      </div>
      </div>
    </div>


  <div class="results">
    <div class="container valenta">
      <div class="row">
        <div class="col-md-3" ng-repeat="case in allCases | deviceFilter:devices | filter:case.material | finishingFilter:case.finishing | filter:colorFilter" >
          <div class="casebox">
            <img src="{{case.image_tag}}">
            <div class="casebox-inner">
              <p class="name">{{case.name}}</p> <p class="color">{{case.color}}</p>
              <p class="product_type">{{case.product_type}}</p>
            </div>
          </div>
          <!-- <p><a class="btn btn-default" href="{{case.url}}" role="button">View details &raquo;</a></p> -->
          </div>
        </div>
      </div>
    </div>
