  <div class="results">
    <div class="container valenta">
      <div class="row">
        <div class="col-md-3" ng-repeat="case in allCases | deviceFilter:devices | leatherFilter:case.material | finishingFilter:case.finishing | sizeFilter:case.sizes | colorFilter:case.color | prodTypeFilter:case.prodType" >
          <div class="col-md-12 casebox" style="padding: 0 0 5px 0;">
            <a href="http://valenta.com/Collection{{case.url}}" target="_top"><img class="img-responsive img-rounded" ng-src="{{case.image_tag}}" width=334></a>
            <div class="casebox-inner">
              <p class="name">{{case.name}}</p> <p class="color">{{case.color}}</p>
              <p class="product_type">{{case.product_type}}</p>
            </div>
          </div>
        </div>
        <div ng-show="(allCases | deviceFilter:devices | leatherFilter:case.material | finishingFilter:case.finishing | sizeFilter:case.sizes | colorFilter:case.color | prodTypeFilter:case.prodType).length == 0"><h2 style="color:white;">No results!</h2></div>
